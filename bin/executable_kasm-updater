#!/bin/bash

set -e
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

source "$SCRIPT_DIR/../kasm-updater/kasm_ascii.sh"

if [[ "$(uname -s)" == "Darwin" ]]; then
  source "$SCRIPT_DIR/../kasm-updater/install-macos-applications.sh"
else
  # Don't source this one - it escalates with sudo and we want to isolate that.
  bash "$SCRIPT_DIR/../kasm-updater/install-ubuntu-applications.sh"
fi

source "$SCRIPT_DIR/../kasm-updater/user-installs.sh"
source "$SCRIPT_DIR/../kasm-updater/install-fonts.sh"
